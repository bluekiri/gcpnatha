resources:
- name: network_setup
  type: netw.jinja
  properties:
    vpcName: '{{ properties["vpcName"] }}'
    ipRange: '{{ properties["ipRange"] }}'
    region: '{{ properties["region"] }}'
- name: healthcheck_setup
  type: hc.jinja
- name: firewall_setup
  type: fw.jinja
  properties:
    vpcName: '{{ properties["vpcName"] }}'
    ipRange: '{{ properties["ipRange"] }}'
    sshAccess: '{{ properties["sshAccess"] }}'
- name: template_1_setup
  type: tmplvm.jinja
  properties:
    id: 1
    machineType: '{{ properties["machineType"] }}'
    machineImage: 'debian-9-stretch-v20180105'
    diskType: 'pd-standard'
    diskSize: 10
    vpcName: '{{ properties["vpcName"] }}'
    region: '{{ properties["region"] }}'
    zone: '{{ properties["region"] }}-{{ properties["zone1"] }}'
    routeTag: 'no-ip'
- name: template_2_setup
  type: tmplvm.jinja
  properties:
    id: 2
    machineType: '{{ properties["machineType"] }}'
    machineImage: 'debian-9-stretch-v20180105'
    diskType: 'pd-standard'
    diskSize: 10
    vpcName: '{{ properties["vpcName"] }}'
    region: '{{ properties["region"] }}'
    zone: '{{ properties["region"] }}-{{ properties["zone2"] }}'
    routeTag: 'no-ip'
- name: template_3_setup
  type: tmplvm.jinja
  properties:
    id: 3
    machineType: '{{ properties["machineType"] }}'
    machineImage: 'debian-9-stretch-v20180105'
    diskType: 'pd-standard'
    diskSize: 10
    vpcName: '{{ properties["vpcName"] }}'
    region: '{{ properties["region"] }}'
    zone: '{{ properties["region"] }}-{{ properties["zone3"] }}'
    routeTag: 'no-ip'